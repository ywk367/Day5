  import java.util.Scanner;

  class Main {
    public static void main(String[] args) {
      
      Scanner scan = new Scanner(System.in);
      int n, k;

      n = scan.nextInt();
      k = (n % 2 == 0)? 1 : 0;
      System.out.println(String.valueOf(k));
      
      //삼항 연산자
      //k=(논리식)?값:값;
    }
  }
