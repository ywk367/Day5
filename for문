1 ~ 자연수 다 더하기

  import java.util.Scanner;

  class Main {
    public static void main(String[] args) {
      
      Scanner scan = new Scanner(System.in);
      int n, i, sumVal = 0;

      n = scan.nextInt();

      for(i = 1; i<=n; ++i){
          sumVal = sumVal + i;
      }

      System.out.println(String.valueOf(sumVal));
      
    }
  }
